/**index.wxss**/
.container{
  position:absolute;
  width:100%;
  height:100%;
  background:#eee;
}
.leftside{
  float:left;
  height:100%;
  width:100px;
  padding-bottom:0;
  text-align:center;
  overflow: scroll;
  background:#fff;
}
.leftside::-webkit-scrollbar{
  width:0;
}
.leftside .menu{
  height:40px;
  color:#333;
  font-size:14px;
  line-height:40px;
  border-top:1px solid #eee;
}
.leftside .menu.active{
  background:#eee;
}
.item-content{
  float:left;
  width:calc(100%);
  height:100%;
}
.box{
  height:calc(100% - 100px);
  padding:10px 0 0 10px;
  overflow: scroll;
}
.item-content.item::-webkit-scrollbar{
  width:2;
}
.item-content .item{
  height:80px;
  padding:10px 0 10px 10px;
  margin-bottom:10px;
  background:#fff;
}
.item-content .item image{
  display:block;
  float:left;
  height:80px;
  width:90px;
  margin-right:10px;
}
.item-content .item text{
  display:block;
  font-size:16px;
}
/* .item-content .box .item.btn.title{
  margin-bottom:5px;
  font-weight:bolder;
} */
.item-content .item .btn{
  display:block;
  float:right;
  margin:20px 10px 0 0;
  padding:5px 10px;
  font-size:14px;
  color:#fff;
  background:rgb(255, 196, 0);
  border-radius:20px;
}
.item-content .item .btn.active{
  background:#ccc;
}
.bottom-bar{
    display:flex;
    position: fixed;
    bottom:0;
    width:100%;
    height:80px;
    line-height:80px;
    background:#fff;
    box-shadow: 0 -5px 10px #ccc;
}

.bottom-bar>view{
    flex-grow: 1;
}
.bottom-bar .count{
    padding-left:10px;
}
.bottom-bar .num{
    margin-right:10px;
    font-size:18px;
    font-weight:bolder;
    color:red;
}
.bottom-bar .btn{
    height:40px;
    width:50px;
    margin:20px 10px 0 0;
    color:#fff;
    line-height:40px;
    text-align:center;
    font-size:16px;
    background:rgb(255, 196, 0);
}